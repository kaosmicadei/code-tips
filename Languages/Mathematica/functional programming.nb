Cell[TextData[{
 "Functional programming is about tell the computer what you want instead of \
how to do it.\n\nThis is use to be a declarative paradigm which means we try \
to be more explicit in the details of what we want and let the details of \
implementation to the compiler/interpreter. As an example look to the \
following definition of partial trace for ",
 Cell[BoxData[
  FormBox[
   RowBox[{
    SubscriptBox["M", 
     RowBox[{"2", "\[Times]", "2"}]], "\[CircleTimes]", 
    SubscriptBox["M", 
     RowBox[{"2", "\[Times]", "2"}]]}], TraditionalForm]],ExpressionUUID->
  "e53407cc-34f1-4856-a24b-4fdf811bb971"],
 "."
}], "Text",
 CellChangeTimes->{{3.812248719549697*^9, 3.812249011603928*^9}, {
  3.812249932118581*^9, 
  3.812249963191433*^9}},ExpressionUUID->"75286805-12cc-4480-9802-\
c900cec0fb51"],

Cell[BoxData[{
 RowBox[{
  RowBox[{"PartialTrace", "[", 
   RowBox[{"1", ",", " ", "m_"}], "]"}], " ", ":=", " ", 
  RowBox[{"With", "[", 
   RowBox[{
    RowBox[{"{", 
     RowBox[{
      RowBox[{"e0", " ", "=", " ", 
       RowBox[{
        RowBox[{"(", GridBox[{
           {"1"},
           {"0"}
          }], ")"}], "\[CircleTimes]", 
        SubscriptBox["\[DoubleStruckOne]", "2"]}]}], ",", " ", 
      RowBox[{"e1", " ", "=", " ", 
       RowBox[{
        RowBox[{"(", GridBox[{
           {"0"},
           {"1"}
          }], ")"}], "\[CircleTimes]", 
        SubscriptBox["\[DoubleStruckOne]", "2"]}]}]}], "}"}], ",", "\n", "\t", 
    RowBox[{
     RowBox[{
      RowBox[{"e0", "\[Transpose]"}], ".", "m", ".", "e0"}], " ", "+", " ", 
     RowBox[{
      RowBox[{"e1", "\[Transpose]"}], ".", "m", ".", "e1"}]}]}], "\n", 
   "]"}]}], "\n", 
 RowBox[{
  RowBox[{"PartialTrace", "[", 
   RowBox[{"2", ",", " ", "m_"}], "]"}], " ", ":=", " ", 
  RowBox[{"With", "[", 
   RowBox[{
    RowBox[{"{", 
     RowBox[{
      RowBox[{"e0", " ", "=", " ", 
       RowBox[{
        SubscriptBox["\[DoubleStruckOne]", "2"], "\[CircleTimes]", 
        RowBox[{"(", GridBox[{
           {"1"},
           {"0"}
          }], ")"}]}]}], ",", " ", 
      RowBox[{"e1", " ", "=", " ", 
       RowBox[{
        SubscriptBox["\[DoubleStruckOne]", "2"], "\[CircleTimes]", 
        RowBox[{"(", GridBox[{
           {"0"},
           {"1"}
          }], ")"}]}]}]}], "}"}], ",", "\n", "\t", 
    RowBox[{
     RowBox[{
      RowBox[{"e0", "\[Transpose]"}], ".", "m", ".", "e0"}], " ", "+", " ", 
     RowBox[{
      RowBox[{"e1", "\[Transpose]"}], ".", "m", ".", "e1"}]}]}], "\n", 
   "]"}]}]}], "Code",
 CellChangeTimes->{{3.81224901568391*^9, 3.812249050022039*^9}, {
  3.812249372696926*^9, 3.812249488733354*^9}},
